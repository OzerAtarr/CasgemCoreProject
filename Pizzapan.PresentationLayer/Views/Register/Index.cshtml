@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="/lib/boostrap/dist/css/boostrap.min.cs" rel="stylesheet"/>
<form method="post">
    <div class="container">
        <br><br />
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br />
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" asp-for="Username" />
        <br />
        <label>Email Adresiniz</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>Şifreniz</label>
        <input type="password" class="form-control" asp-for="Password" />
        <br />
        <label>Şifre Tekrar</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-primary">Kayıt Ol</button>
    </div>
</form>